<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= fields_for(:person, @user.person) do |ff| %>
        <div class="field">
          <%= ff.label :name %>
          <br>
          <%= ff.text_field :name %>
        </div>
        <div class="field">
          <%= ff.label :email %>
          <br>
          <%= ff.text_field :email %>
        </div>
    <% end %>

    <div class="actions">
      <%= f.submit('Save') %>
      <%= link_to('Cancel', root_path) %>
    </div>
<% end %>
